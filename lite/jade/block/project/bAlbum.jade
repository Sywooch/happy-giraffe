mixin bAlbum(mod, vars)
    // b-album
    section.b-album(class=mod)
        - if (vars.top)
            .b-album_top
                .tx-date Обновлен  Вчера 13:45
                h2.b-album_title
                    a.b-album_title-a.heading-link-xl(href='#')  Ялта ♥♥♥
                // 2 строки описания, предположительно 140 символов
                a.b-album_desc(href="#") В половине чашке горячей воды разведем желатин. Дадим ему остыть. Желе для торта разводим согласно инструкции. Поломаем не небольшие 
                .b-album_count-hold
                    .b-album_count 240
                    .b-album_count-tx фото
        .b-album_img-hold
            a.b-album_img-a(href="#")
                .b-album_img-pad
                    // У изображений соотношения сторон сохраняются 
                    // 0,65 соотношение сторон
                picture.b-album_img-picture
                
                    //- source(srcset=path+'images/example/'+item.w1, media="(min-width: 1024px)")
                    source(srcset=path+'images/example/photoalbum/2-960.jpg 1x, '+path+'images/example/photoalbum/1-1920.jpg 2x' media="(min-width: 640px)")
                    //- source(srcset=path+'images/example/w880-h580-1.jpg', media="(min-width: 480px)")
                    img.b-album_img-big(src=path+'images/example/photoalbum/1-1280.jpg', alt="Фото")
                //- img.b-album_img-big(src=path+'images/example/w640-h416-1.jpg', srcset="#{vars.img}", alt="", sizes="100vw")
                //-
                    // телефоны до 480
                    // height 300
                    // width 480
                    // устройства от w480
                    // height 380
                    // width 768
                    // устройства от w768
                    // height 500
                    // width 960
                    // десктоп и большие планшеты от w1000
                    // Высота изображений 580
                    // Ширина изображения 880
            .b-album_img-hold-ovr
                .ico-zoom.ico-zoom__abs
            - if (vars.arrow)
                // Стрелки показывать скрывать по тапу (касанию пальца)
                a.i-photo-arrow.i-photo-arrow__l.i-photo-arrow__abs(href="#")
                a.i-photo-arrow.i-photo-arrow__r.i-photo-arrow__abs(href="#")
        .b-album_overlay
            a.b-album_r
                - if (vars.tx)
                    .b-album_tx
                        != vars.tx
                        
                .b-album_ico-album(class=vars.icoAlbumMod)
                .b-album_arrow-all
            ul.b-album_prev.clearfix.visible-md-block
                // Нужно уточнить какую ширину должен занимать ряд изображений или какое их количество будет. Предполагаю, что 5шт в ряду.
                li.b-album_prev-li
                    a.b-album_prev-a(href="#")
                        //- высота изображений 50-70 px
                        img.b-album_prev-img(src="#{path}images/example/w104-h70-1.jpg", alt="")
                        .b-album_prev-hold
                li.b-album_prev-li
                    a.b-album_prev-a(href="#")
                        img.b-album_prev-img(src="#{path}images/example/w46-h70-1.jpg", alt="")
                        .b-album_prev-hold
                li.b-album_prev-li
                    a.b-album_prev-a(href="#")
                        img.b-album_prev-img(src="#{path}images/example/w104-h70-2.jpg", alt="")
                        .b-album_prev-hold
                li.b-album_prev-li
                    a.b-album_prev-a(href="#")
                        img.b-album_prev-img(src="#{path}images/example/w104-h70-1.jpg", alt="")
                        .b-album_prev-hold
                li.b-album_prev-li
                    a.b-album_prev-a(href="#")
                        img.b-album_prev-img(src="#{path}images/example/w104-h70-2.jpg", alt="")
                        .b-album_prev-hold
                - if (vars.prevAdd)
                    li.b-album_prev-li
                        a.album-photo-add(href="#")
                    
    // /b-album


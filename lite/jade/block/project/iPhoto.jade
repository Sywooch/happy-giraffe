//- iPhoto
    mod     .i-photo__load  .i-photo__error  .i-photo__empty .i-photo__loaded  .i-photo__ie
    vars 
        type
mixin iPhoto(mod, vars)
    // Блок фотографии 
        Разные состояния блока применяются модификаторы .i-photo__load  .i-photo__error .i-photo__ie  .i-photo__loaded
    .i-photo(class=mod)
        - if (vars.type == "empty")
            .i-photo_hold
        - else
            if (vars.delete)
                a.ico-close4(href="#")
        // Разные состоянияния блока могут лежать в разных .i-photo_hold можно и управлять видами через их видимость
        - if (vars.type == "load")
            // Загрузка фото
            .i-photo_hold
                .i-photo_progress
                    // boostrap progressbar
                    // progressbar изначально уже весь заполнен
                    .progress.progress-striped.active.progress__cont
                        .progress-bar.progress-bar__cont(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%')
                    .tx-hint Загрузка
        - if (vars.type == "error")
            // Ошибка
            .i-photo_hold.error
                .tx-hint IMG_5295.JPG
                .tx-hint Ошибка загрузки

        - if (vars.type == "ie")
            // Вид для ие
            .i-photo_hold
                .i-photo_file-name IMG_5295.JPG
                // input.i-photo_itx.itx-gray(type="text", placeholder='Введите заголовок')
                // Продумать текст
            .tx-hint Для предпросмотра загружаемых изображений нужно обновить браузер на более новый.
        
        - if (vars.type == "loaded")
            // Загруженное фото
            .i-photo_hold
                .i-photo_img-hold
                    img.i-photo_img(src='#{vars.src}', alt="")
                    if(vars.edit)
                        .i-photo_overlay
                            a.ico-photo-edit.powertip(href='#', title='Редатировать')
                    if(vars.rotate)
                        .i-photo_overlay
                            a.i-photo_rotate(href="") 
                            a.i-photo_rotate.i-photo_rotate__r(href="") 
                // input.i-photo_itx.itx-gray(type="text", placeholder='')

        - if (vars.type == "ico-family")
            .i-photo_hold
                .i-photo_img-hold
                    .ico-family-m.ico-family-m__baby
                    .i-photo_overlay
                        a.i-photo_rotate(href="") 
                        a.i-photo_rotate.i-photo_rotate__r(href="") 
                // input.i-photo_itx.itx-gray(type="text", placeholder='Введите заголовок')
    // /Блок фотографии


//- Стрелки листания статей

mixin postArrow(mod, vars)
    // стрелку листания записей можно расположить практически в любом месте по коду где удобней программисту 
    script.
        /****************
        **  Post post-arrow fade in
        *****************/
        var didScroll = false;
        jQuery(window).scroll(function() {
            didScroll = true;
        });


        var content_top = $('.b-main').position().top;

        setInterval(function() {
            if ( didScroll ) {
                didScroll = false;
                y = jQuery(window).scrollTop();

                if(y < content_top){
                    $('.post-arrow').removeClass('visible');
                }else{
                    $('.post-arrow').addClass('visible');
                }
            }
        }, 150);


    a.post-arrow.post-arrow__l(href="#") 
        .i-photo-arrow
        .post-arrow_in-hold
            .post-arrow_in
                .verticalalign-m-help
                .post-arrow_img-hold
                    img.post-arrow_img(src="#{path}images/example/w122-h85-1.jpg", alt="Ксения Бородина впервые в своей жизни сварила суп")
                .post-arrow_t Ксения Бородина впервые в своей жизни сварила суп
    a.post-arrow.post-arrow__r(href="#") 
        .i-photo-arrow
        .post-arrow_in-hold
            .post-arrow_in
                .verticalalign-m-help
                //-.post-arrow_img-hold
                    img.post-arrow_img(src="#{path}images/example/w122-h85-1.jpg", alt="Ксения Бородина впервые в своей жизни сварила суп")
                .post-arrow_t Ксения Бородина впервые в своей жизни сварила суп

- var postArrow = {}
- var postArrow.v = {}
- postArrow.v.item = true

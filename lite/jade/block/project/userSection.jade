//- userSection
    Блок анкеты пользователя
    mod     
    vars 
        
mixin userSection(mod, vars)
    // userSection
    section.userSection(class=mod)
        .userSection_hold.clearfix
            .userSection_left
                h2.userSection_name Ангелина Богоявленская
                .clearfix
                    | 33 года (28 января)
                if(vars.lacation)
                    .location.locationsmall.clearfix
                        span.flag.flag-ua
                        span.location_tx
                            | Ярославская обл.
                            | Переславль-Залесский
                if(vars.btnsUserActions)
                    .userSection_btn-hold.clearfix
                        //
                            виды кнопок друзья 
                            У каждого разный title
                            userSection_btn__friend title = Приглашение отправлено
                            userSection_btn__friend-add title = Добавить в друзья
                            userSection_btn__friend-added title = Друг
                            userSection_btn__friend-append title = Хочет дружить  
                        a.userSection_btn.userSection_btn__friend-append.powertip(href='', title='Хочет дружить')
                            span.userSection_ico
                        a.userSection_btn.userSection_btn__dialog.powertip(href='', title='Написать сообщение')
                            span.userSection_ico
                if(vars.btnEdit)
                    a.btn.btn-white.btn-xm(href='#') 
                        span.ico-edit.ico-edit__s-white 
                        |  Редактировать

            .userSection_center
                .userSection_center-reg с Веселым Жирафом 2 года 5 месяцев 203 дня
                .b-ava-large.b-ava-large__nohover
                    span.b-ava-large_online На сайте
                    .b-ava-large_ava-hold
                        if(vars.ava)
                            +ava("ava__large ava__male ava__base-xs", ava.c)
                        else
                            +ava("ava__large ava__female ava__base-xs", ava.empty)
                    //-span.b-ava-large_online На сайте
                    if(vars.user)
                        a.i-ava-bubble.i-ava-bubble__photo.powertip(href='#', title='Изменить фото')
                            .i-ava-bubble_ico.i-ava-bubble_ico__photo
            .userSection_right
                if(vars.family)
                    +bFamily('', bFamily.a)
                if(vars.familyEdit)
                    +bFamily('', bFamily.userEdit)
                if(vars.familyEmpty)
                    +bFamily('', bFamily.userEmpty)

                
        .userSection_panel
            ul.userSection_panel-ul.clearfix
                li.userSection_panel-li
                    a.userSection_panel-a(href="") Анкета
                li.userSection_panel-li
                    a.userSection_panel-a(href="") Семья 
                li.userSection_panel-li.active
                    a.userSection_panel-a(href="") Блог 
                li.userSection_panel-li
                    a.userSection_panel-a(href="") Фото
    // /userSection


- userSection = {}

- userSection.base = {}
- userSection.base.family = true
- userSection.base.lacation = true
- userSection.base.btnsUserActions = true

- userSection.empty = {}

- userSection.baseUser = {}
- userSection.baseUser.user = true
- userSection.baseUser.familyEdit = true
- userSection.baseUser.btnEdit = true
- userSection.baseUser.ava = true

- userSection.baseUserEmpty = {}
- userSection.baseUserEmpty.user = true
- userSection.baseUserEmpty.familyEmpty = true
- userSection.baseUserEmpty.btnEdit = true

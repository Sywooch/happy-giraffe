
//- Пейджинатор
mixin pagination(mod, vars)
    // paginator
    .yiipagination(class=mod)
        .pager
            ul.yiiPager
              li.previous
                a(href='')
              li.page
                a(href='') 1
              li.page
                a(href='') 2
              // class .page-points нужно заменить на стандартный класс yii для этого элемента
              li.page-points
                | ...
              li.page
                a(href='') 5
              li.page
                a(href='') 6
              li.page.selected
                a(href='') 7
              li.page
                a(href='') 8
              li.page.hidden 
                a(href='') 9
              // class .page-points нужно заменить на стандартный класс yii для этого элемента
              li.page-points
                | ...
              li.page
                a(href='') 15
              li.page
                a(href='') 16
              li.next
                a(href='')

    // /paginator

- var pagination = {}
- pagination.base = {}


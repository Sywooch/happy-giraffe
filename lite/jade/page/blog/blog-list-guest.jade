include ../../block/config
extend ../../extend/layout_base
block vars
    - var bodyClass = 'body__lite';
    - global.cssFile = 'blog.css'; 

block layout

    // b-main
    .b-main.clearfix
        .b-main_cont.b-main_cont__broad
            .b-crumbs.b-crumbs__s
                .b-crumbs_tx Я здесь
                ul.b-crumbs_ul
                    li.b-crumbs_li
                        a.b-crumbs_a(href='#') Главная
                    li.b-crumbs_li
                        +ava('ava__small', ava.a)
                    li.b-crumbs_li.b-crumbs_li__last
                        span.b-crumbs_last Блог

    .b-main.clearfix
        +userSection('visible-md-block', userSection.base)
            
    .b-main.clearfix    
        .b-main_cont              
            +userSubscribers('visible-md-block')

            .b-main_col-hold.clearfix
                ///////
                // Основная колонка  
                .b-main_col-article
  
                    +bArticleListItem('', bArticleListItem.a) 

                    +bArticleListItem('', bArticleListItem.b) 

                    +bArticleStatus('', bArticleStatus.list)

                    +bArticleListPhotopost('', bArticleListPhotopost.base)
                    // Заглушка загрузки фотопоста, фотоальбома
                    +bArticleListPhotopost('', bArticleListPhotopost.baseEmpty)
    
                    +paginationSmall('yiipagination__center', paginationSmall.base)
  
                // /Основная колонкa
                 

                +sidebarArticle('', sidebarArticle.base)

    +layout-footer-lite()

    
       
 

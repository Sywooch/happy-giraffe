        // стрелку листания записей можно расположить практически в любом месте по коду где удобней программисту 
        script.
            /****************
            **  Post post-arrow fade in
            *****************/
            var didScroll = false;
            jQuery(window).scroll(function() {
                didScroll = true;
            });


            var content_top = $('.b-main').position().top;

            setInterval(function() {
                if ( didScroll ) {
                    didScroll = false;
                    y = jQuery(window).scrollTop();

                    if(y < content_top){
                        $('.post-arrow').removeClass('visible');
                    }else{
                        $('.post-arrow').addClass('visible');
                    }
                }
            }, 150);



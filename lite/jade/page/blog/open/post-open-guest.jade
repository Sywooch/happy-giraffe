                        .article-similar_img-hold
                            a(href="")
                                img.article-similar_img(src="#{path}images/example/w240-h165.jpg", alt="")
                    .article-similar.article-similar__blue
                        .article-similar_row
                            +ava('ava__small', ava.a)

include ../../../block/config
extend ../../../extend/layout_base_user
block vars
    - var bodyClass = 'body__lite';
    - global.cssFile = 'member-user.css';
  
block layout

    .b-main
        .b-main_cont.b-main_cont__wide

            //-+userAddRecord('', userAddRecord.blog)
            .postAdd.b-main_col-hold.clearfix
                .b-main_col-article
                    .postAdd_hold
                        .postAdd_row
                            .heading-small
                                .ico-post-type.ico-post-type__video.active
                                | Создать видеопост
                        .postAdd_row 
                            .inp-valid.inp-valid__abs.error
                                .inp-valid_count 30
                                input.itx-gray(placeholder="Заголовок") 
                                .inp-valid_error Ошибка
                            
                    
                        .postAdd_row
                            // Блочек описание видео сервисов
                            .b-insert.b-insert__center
                                .b-insert_hold
                                    .b-insert_close.ico-close4
                                    .video-container
                                        // загруженое видео
                                        iframe(width="600", height="337", frameborder="0", allowfullscreen="", src="http://www.youtube.com/embed/pehSAUTqjRs?wmode=transparent")

                        .postAdd_row
                            .inp-valid.inp-valid__abs
                                textarea.itx-gray(rows='5', cols='40', placeholder="Ваш комментарий к видео")
                                .inp-valid_count 450
                    // Строка
                    +postAddRowBtns('', postAddRowBtns.a)

        +layout-footer-lite()

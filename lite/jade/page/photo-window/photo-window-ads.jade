                a.photo-window_close(href='#')


                // Конец просмотра
                .photo-window-ads
                    .photo-window-ads_hold
                        .photo-window-ads_tx Смотрите другие галереи
                        .photo-window-ads_in
                            .photo-window-ads_i
                                +photoAd(1)


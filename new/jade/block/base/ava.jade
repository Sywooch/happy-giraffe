
//- ava
//- Аватары пользователей
//- mod 
    vars
        icoStatus 
            ico-status__online
            ico-status__offline
        src - путь к изобржению аватара
        avaSpan 
mixin ava(mod, vars)
    - if (vars.avaSpan)
        span.ava(class=mod, href='')
            span.ico-status(class=vars.icoStatus)
            img.ava_img(alt='', src='#{vars.src}')
    -else 
        - if (vars.avaNameTitle)
            a.ava.powertip(class=mod, href='', title=vars.avaNameTitle)
                span.ico-status(class=vars.icoStatus)
                img.ava_img(alt='', src='#{vars.src}')
        - else 
            a.ava(class=mod, href='')
                span.ico-status(class=vars.icoStatus)
                img.ava_img(alt='', src='#{vars.src}')




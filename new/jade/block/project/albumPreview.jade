mixin albumPreview(mod, vars)

    // Список альбомов
        .album-preview__s
        .album-preview__m
        .album-preview__xl
    .album-preview(class=mod)
        ul.album-preview_ul
            - each img, i  in vars.items.img
                - if (img == 'drag')
                    // .album-preview_li__drag и .display-n классы на элемент что тащаят
                    li.album-preview_li.album-preview_li__drag
                        .album-preview_in.display-n
                            .album-preview_img-hold
                                // 
                                img.album-preview_img(src="/new/images/example/w155-h140.jpg", alt="")
                            .album-preview_overlay
                - else
                    li.album-preview_li
                        a.album-preview_in(href="")
                            .album-preview_img-hold
                                // 
                                img.album-preview_img(src="/new/images/example/#{img}", alt="")
                            .album-preview_overlay
                            - if (vars.check)
                                .album-preview_check
                        - if (vars.album)
                            .album-preview_hold
                                a.album-preview_t(href="") 
                                    = vars.items.tx[i]
                                .album-preview_count 
                                    = vars.items.count[i]



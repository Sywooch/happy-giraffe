include ../../block/config
extend ../../extend/layout

block layout-wrapper_hold
    // im
    .im
        +js-im
        .im_hold.clearfix
            // im-sidebar
            section.im-sidebar.clearfix
                .im-sidebar_panel
                    +side-menu("side-menu__im")
                    .im-sidebar_sound
                        a.im-sidebar_sound-ico(href="")
                .im-sidebar_users
                    +im-sidebar_search()
                    +im-user-list("", {usersCount: 2})
            // /im-sidebar

            // im-center
            section.im-center
                .im-center_top
                    +im-panel("", {friend: "friend__added"})
                .im-center_middle
                    .scroll
                        .im-center_middle-hold.scroll_scroller
                            .im-center_middle-w.scroll_cont
                                +cap-empty("cap-empty__abs", {t: 'Диалог с данным пользователем удален', txSub: "<a href=''>Восстановить</a>"})
                        .scroll_bar-hold
                            .scroll_bar
                                .scroll_bar-in
                +im-center_bottom("", {wisywig: true})
                
            // /im-center
    // /im
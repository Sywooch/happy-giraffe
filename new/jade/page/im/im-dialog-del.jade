include ../../block/config
extend ../../extend/layout

block layout-wrapper_hold
    // im
    .im
        +js-im
        .im_hold.clearfix
            // im-sidebar
            section.im-sidebar.clearfix
                .im-sidebar_panel
                    +side-menu("side-menu__im")
                    .im-sidebar_sound
                        a.im-sidebar_sound-ico(href="")
                .im-sidebar_users
                    +im-sidebar_search()
                    +im-user-list("", {usersCount: 2})
            // /im-sidebar

            // im-center
            section.im-center
                .im-center_top
                    +im-panel("", {friend: "friend__added"})
                .im-center_middle
                    .scroll
                        .im-center_middle-hold.scroll_scroller
                            .im-center_middle-w.scroll_cont
                                .im_loader
                                // Когда без сообщений нужен еще класс .cap-empty__abs
                                +cap-empty("margin-20", {t: 'Диалог с данным пользователем удален', txSub: "<a href=''>Восстановить</a>"})
                                +im-message("", {mod_name: "im-message_name__self", bControl: ['delete']})
                                .im_loader
                        .scroll_bar-hold
                            .scroll_bar
                                .scroll_bar-in
                +im-center_bottom("", {})
                
            // /im-center
    // /im